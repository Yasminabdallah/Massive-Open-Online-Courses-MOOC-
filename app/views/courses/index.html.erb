<p id="notice"><%= notice %></p>

<h1 align="center">Courses</h1>

<br>
<% if can? :create, Course %>
  <%= link_to "New Course", new_course_path , class: 'btn btn-success btn-xs ' %>
<% end %>
<br>
<br>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Created By </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.title %></td>
        <td><%= User.find(course.user_id).name %></td>
       
        <td><%= link_to 'Show', course ,class: 'btn btn-primary btn-xs'%></td>
        <% if can? :edit, Course %>
        <td><%= link_to 'Edit', edit_course_path(course), class: 'btn btn-info btn-xs' %></td>
        <%end %>
        
        <% if can? :destroy, Course %>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } ,class: 'btn btn-danger btn-xs'%></td>
        <%end%>
      </tr>

    <% end %>
  </tbody>
</table>

<br>


