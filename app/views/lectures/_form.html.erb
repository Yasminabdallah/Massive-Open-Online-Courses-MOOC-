    <%= form.label :content %>
    <%= form.text_area :content, id: :lecture_content, :class => 'ckeditor' %>
  </div>
  
  <div class="field">
  <%= form.label :course_id %>
  
  <%= form.select :course_id, Course.all.collect { |course| [course.title,course.id]} %>
  </div>

  <div class="field">
  <%= form.label :user %>
   
  <%=  User.find(current_user.id).name %>
  </div>




  <div class="actions">
    <%= form.submit %>
  </div>
  
  
<% end %>
