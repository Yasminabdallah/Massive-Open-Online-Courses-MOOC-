<p id="notice"><%= notice %></p>

<h5>Info about lecture</h5>

<%= link_to spam_lecture_path(@lecture) , method: :post do%>
  Spam
   <% unless current_user.lectures.include?(@lecture) %>
        <%= 0 %>
   <% else %>
        <%= 1 %>
   <% end %>
<% end %>


<p>
  <strong>Content:</strong>
  <%= @lecture.content.html_safe%>
</p>
<p>
<strong>CreatedBy</strong>
<%= User.find(@lecture.user_id).name%>
</p>

<p>
<strong>CourseName</strong>
<%= Course.find(@lecture.course_id).title%>
</p>

<hr>
<%= commontator_thread(@lecture) %>
<br>
<%= link_to 'Edit', edit_lecture_path(@lecture) %> |
