<!DOCTYPE html>
<html>
  <head>
    <title>MOOC</title>
    <%= stylesheet_link_tag    'application' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
<body>


  <header class="navbar  navbar-inverse">
    <div class="navbar-class">
      <div class="container">


      <!-- Collect the nav links, forms, and other content for toggling -->

        <ul class="nav navbar-nav">
        <% if current_user %>
                
        <li class="active"><%= link_to 'Edit Profile',edit_user_registration_path %></li>
        <li class="active"><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
        <li class="active"><%= link_to 'lectures',lectures_path %></li>
        <li class="active"><%= link_to 'courses',courses_path %></li>
       
       <% else %>

        
       <li class="active"><%= link_to 'courses',courses_path %></li>
       <li class="active"><%= link_to 'lectures',lectures_path %></li>
       <li class="active"><%= link_to 'Login', new_user_session_path %></li>
       <li class="active"><%= link_to 'Register',new_user_registration_path %></li>
   
      <% end %>
        </ul>


      </div>
    </div>
  </header>
<%= yield %>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
</body>
</html>